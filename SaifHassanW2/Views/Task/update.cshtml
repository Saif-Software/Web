@model SaifHassanW2.Models.ViewModels.TasksViewModel

@{
    ViewData["Title"] = "update";
}

<h1>update</h1>

<h4>Tasks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <input asp-for="status" class="form-control" />
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proirty" class="control-label"></label>
                <input asp-for="Proirty" class="form-control" />
                <span asp-validation-for="Proirty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="projectID" class="control-label"></label>
                <select asp-for="projectID" class="form-control">
                    @foreach(var item in Model.projects)
                    {
                        <option value="@item.PID">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="projectID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamMemberID" class="control-label"></label>
                <select asp-for="TeamMemberID" class="form-control" >
                    @foreach(var item in Model.teamMembers)
                    {
                        <option value="@item.TeamID">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="TeamMemberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-action="update" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
